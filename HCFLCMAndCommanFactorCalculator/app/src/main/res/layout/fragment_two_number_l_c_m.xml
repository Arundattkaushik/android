<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoNumberLCM">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/firstNumber_twoNumber_lcm"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="First Number"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/secondNumber_twoNumber_lcm"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="Second Number"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"/>

    <TextView
        android:id="@+id/resultField_twoNumber_lcm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="Press submit to view LCM of Numbers"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/submitButton_twoNumber_lcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Submit"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="250dp"/>
</FrameLayout>