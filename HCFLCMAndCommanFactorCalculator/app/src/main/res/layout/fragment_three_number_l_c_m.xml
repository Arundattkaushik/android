<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreeNumberLCM">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/firstNumber_threeNumber_lcm"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="First Number"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/secondtNumber_threeNumber_lcm"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="Second Number"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/thirdNumber_threeNumber_lcm"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="Third Number"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="320dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/resultField_threeNumber_lcm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Press submit to view LCM of numbers"
        android:textColorHint="@color/black"
        android:layout_marginTop="400dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/submitButton_threeNumber_lcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="submit"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="470dp"
        />

</FrameLayout>