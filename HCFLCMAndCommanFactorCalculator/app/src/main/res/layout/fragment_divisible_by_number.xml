<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DivisibleByNumber">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/getNumber_divisibleBy_field"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="Enter a number"
        android:textColorHint="@color/black"
        android:padding="10dp"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/setResult_divisibleBy_field"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Press submit button to get number divisible by!"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:gravity="center"/>

    <Button
        android:id="@+id/submitButton_divisibleBy_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="submit"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"/>

</FrameLayout>