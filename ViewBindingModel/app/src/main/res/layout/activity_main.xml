<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/firstNumber_threeNumber_hcf"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="First Number"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/secondtNumber_threeNumber_hcf"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="Second Number"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/thirdNumber_threeNumber_hcf"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="Third Number"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/resultField_threeNumber_hcf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Press submit to view HCF of numbers"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/submitButton_threeNumber_hcf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="submit"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

</LinearLayout>